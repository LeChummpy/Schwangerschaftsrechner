<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".create_new_Patient_activity"
    android:background="#00CCFF">

    <EditText
        android:id="@+id/Enter_firstName"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonIncreaseAdop"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:background="@drawable/minor_button"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/Enter_adop"
        app:layout_constraintEnd_toStartOf="@+id/ButtonDecreaseAdop"
        app:layout_constraintHorizontal_bias="0.52"
        app:layout_constraintStart_toEndOf="@+id/Enter_adop" />

    <Button
        android:id="@+id/Button_Enter_Date"
        android:layout_width="99dp"
        android:layout_height="49dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/minor_button"
        android:text="enter date"
        app:layout_constraintBottom_toBottomOf="@+id/Enter_dola"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="day of the last amenorrhea"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Enter_dola"
        app:layout_constraintStart_toStartOf="@+id/Enter_dola" />

    <EditText
        android:id="@+id/Enter_dola"
        android:layout_width="191dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="484dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonDecreaseAdop"
        android:layout_width="49dp"
        android:layout_height="48dp"
        android:layout_marginEnd="28dp"
        android:layout_marginRight="28dp"
        android:background="@drawable/minor_button"
        android:text="-"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="@+id/Enter_adop"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="surename"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Enter_sureName"
        app:layout_constraintStart_toStartOf="@+id/Enter_sureName" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="average deviation of 28 days period"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Enter_adop"
        app:layout_constraintStart_toStartOf="@+id/Enter_adop" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="first name"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/Enter_firstName"
        app:layout_constraintStart_toStartOf="@+id/Enter_firstName" />

    <EditText
        android:id="@+id/Enter_adop"
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="384dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="number"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/Enter_sureName"
        android:layout_width="300dp"
        android:layout_height="49dp"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="236dp"
        android:background="@drawable/textinput"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ButtonSubmit"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_round"
        android:text="+"
        android:textSize="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonChancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_round_red"
        android:text="chancel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>